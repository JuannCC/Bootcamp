def bisiesto(num):
    for n in range(1, num):
        if num % 4 == 0 and num % 100 == 0 and num % 400 == 0:
            print(num, "es bisiesto ya que es divisible por 4, 100 y 400")
            return
        elif num % 4 == 0 and num % 100 != 0 and num % 400 != 0:
            print(num, "es bisiesto ya que es divisible por 4 y no por 100 y 400")
            return       
    print("No es bisiesto porque no es divisble por 4")
    return

bisiesto(2022)
